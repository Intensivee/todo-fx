<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.ItemController"
            prefHeight="250.0" prefWidth="600.0">

    <content>
        <GridPane vgap="15" hgap="15">
            <Label text="Nagłowek: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="headingTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Notatka: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="noteTextArea" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"/>
            <Label text="Dzień: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="dayComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>

</DialogPane>
